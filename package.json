{
	"name": "muchacho-personal-manager",
	"version": "1.1.0",
	"description": "Muchacho Personal Manager - Todo, Passwords, Videos, Books, Notes",
	"main": "main.js",
	"scripts": {
		"start": "electron .",
		"dev": "electron .",
		"build": "electron-builder --linux"
	},
	"author": {
		"name": "Muchacho",
		"email": "muchacho@personal-manager.local"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Muchacho365/my-personal-manager.git"
	},
	"license": "MIT",
	"devDependencies": {
		"electron": "^28.0.0",
		"electron-builder": "^24.9.1"
	},
	"dependencies": {
		"@tensorflow-models/universal-sentence-encoder": "^1.3.3",
		"@tensorflow/tfjs": "^4.22.0",
		"compromise": "^14.14.5",
		"crypto-js": "^4.2.0",
		"electron-updater": "^6.6.2",
		"highlight.js": "^11.9.0",
		"marked": "^11.0.0",
		"marked-highlight": "^2.0.0",
		"natural": "^8.1.0",
		"stopword": "^3.1.5"
	},
	"build": {
		"appId": "com.muchacho.personal-manager",
		"productName": "Muchacho Personal Manager",
		"directories": {
			"output": "dist"
		},
		"files": [
			"main.js",
			"preload.js",
			"index.html",
			"styles.css",
			"js/**/*",
			"assets/**/*",
			"node_modules/**/*"
		],
		"linux": {
			"target": [
				"deb"
			],
			"category": "utility",
			"executableArgs": [
				"--no-sandbox"
			],
			"publish": [
				{
					"provider": "github",
					"owner": "Muchacho365",
					"repo": "my-personal-manager"
				}
			]
		},
		"win": {
			"target": [
				"nsis"
			],
			"signAndEditExecutable": false,
			"publish": [
				{
					"provider": "github",
					"owner": "Muchacho365",
					"repo": "my-personal-manager"
				}
			]
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true,
			"createDesktopShortcut": true,
			"createStartMenuShortcut": true,
			"differentialPackage": true
		}
	}
}
